                        <div class="card-body">
                            <img src="images/{{ cone.productMainPicture }}" width="100%" alt="Cône">
                        </div>
                        <div class="card-header">
                            <h2 class="card-title">{{ cone.productName }}</h1>
                            <p class="card-title">{{ cone.produtTaste }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}