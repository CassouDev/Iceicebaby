{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/template.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/homepage.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="col ice-card fog" id="home-message">
        <h1 class="row align-items-center error-title">{{ 'http_error.name'|trans({ '%status_code%': status_code }) }}</h1>
            <div class="col-md-12 ice-card">
                <p class="lead">
                    {{ 'http_error.description'|trans({ '%status_code%': status_code }) }}
                </p>
                <p>
                    {{ 'http_error.suggestion'|trans({ '%url%': path('blog_index') })|raw }}
                </p>
            </div>
            <a href="{{ path('home')}}" class="col">
                <button class="btn btn-info error-button" id="cart-redirect-btn">Retour à la page d'accueil</button>
            </a>
        <img src="../../../images/404_error.jpg" class="error" alt="glace écrasée">
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}