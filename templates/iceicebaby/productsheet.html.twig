{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="{{ asset('css/template.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/homepage.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/productspage.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/productsheet.css') }}" type="text/css" rel="stylesheet">    
{% endblock %}

{% block title %}Pick your ICE{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="row" id="ice_cream_navbar">
                <ul class="navbar-nav me-auto">
                    <li class="col-md-3 nav-item">
                        <p class="nav-link active">GLACES</p>
                        {# <a class="nav-link active" href="/glaces">GLACES</a> #}
                    </li>
                    <li class="col-md-3 nav-item">
                        <a class="nav-link" href="#sorbets">SORBETS</a>
                    </li>
                    <li class="col-md-3 nav-item">
                        <a class="nav-link" href="#icesticks">ICE STICKS</a>
                    </li>
                    <li class="col-md-3 nav-item">
                        <a class="nav-link" href="#cones">CÔNES</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid" id="{{ product.productType }}s">
        <div class="container">
            <div class="row category product">
                <h1>{{ product.productName }}</h1>

                <div id="carouselExampleIndicators" class="col-md-6 carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="images/{{ product.productMainPicture }}" width="100%" alt="Photo principale first slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="images/{{ product.productPicture2 }}" width="100%" alt="Photo detail produit second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="images/{{ product.productPicture3 }}" width="100%" alt="Photo detail produit third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="images/{{ product.productPicture4 }}" width="100%" alt="Photo detail produit fourth slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="col-md-5">
                    <h2>{{ product.produtTaste }}</h2>
                    <h3>{{ product.productSize }}</h3>
                    <p id="product-description">{{ product.productDescription }}</p>
                    <p id="product-price">{{ product.productPrice|format_number({rounding_mode: 'floor', }) }} €</p>

                    <div class="form-group">
                        <label for="exampleSelect1" class="form-label mt-4">Quantité :</label>
                        <select class="form-select" id="exampleSelect1">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>

                    <button type="button" class="btn">I WANT IT !</button>
                </div>
            </div>
        </div>    
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    {#{{ encore_entry_script_tags('app') }}#}
{% endblock %}