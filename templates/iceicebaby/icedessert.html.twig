{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/template.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/homepage.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/productspage.css') }}" type="text/css" rel="stylesheet">    
{% endblock %}

{% block title %}Ice cream baby !{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="row" id="ice_cream_navbar">
                <ul class="navbar-nav me-auto">
                    <li class="col-md-6 nav-item">
                        <p class="nav-link active">BÛCHES</p>
                        {# <a class="nav-link active" href="/glaces">GLACES</a> #}
                    </li>
                    <li class="col-md-6 nav-item">
                        <a class="nav-link" href="#ice-entremets">ICE ENTREMETS</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

     <div class="container-fluid" id="buches">
        <h1 class="row justify-content-md-center">{{ title1 }}</h1>
        <div class="row category products">
            {% for product in products %}
                <div class="col-md-4 card border-light product-card">
                    <a href="{{ path('product_sheet', {'id': product.id}) }}">
                        <div class="card-body">
                            <img src="images/{{ product.productMainPicture }}" width="100%" alt="Glace">
                        </div>
                        <div class="card-header">
                            <h2 class="card-title">{{ product.productName }}</h1>
                            <p class="card-title">Hum ça à l'air bon !{# {{ product.productTaste }} #}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="container-fluid" id="ice-entremets">
        <h1 class="row justify-content-md-center">{{ title2 }}</h1>
        <div class="row category products">
            {% for product in products %}
                <div class="col-md-4 card border-light product-card">
                    <a href="{{ path('product_sheet', {'id': product.id}) }}">
                        <div class="card-body">
                            <img src="images/{{ product.productMainPicture }}" width="100%" alt="Sorbet">
                        </div>
                        <div class="card-header">
                            <h2 class="card-title">{{ product.productName }}</h1>
                            <p class="card-title">Hum ça à l'air bon !{# {{ product.productTaste }} #}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}