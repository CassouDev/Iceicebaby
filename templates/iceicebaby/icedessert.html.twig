{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/template.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/homepage.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/productspage.css') }}" type="text/css" rel="stylesheet">    
{% endblock %}

{% block title %}Ice dessert baby !{% endblock %}

{% block navbar2 %}
    <div class="row second_navbar">
        <ul class="navbar-nav me-auto">
            <li class="col-md-6 nav-item">
                <a class="nav-link {{ buches_link }}" href="#buche">BÃ›CHES</a>
            </li>
            <li class="col-md-6 nav-item">
                <a class="nav-link {{ entremets_link }}" href="#ice-entremet">ICE ENTREMETS</a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block body %}
     <div class="container-fluid" id="buche">
        <h1 class="row justify-content-md-center">{{ title1 }}</h1>
        <div class="row category products">
            {% for buche in buches %}
                <div class="col-md-4 card border-light product-card galery">
                    <a href="{{ path('icedessert_product_buche', {'id': buche.id}) }}">
                        <div class="card-body">
                            <img src="images/{{ buche.productMainPicture }}" width="100%" alt="Glace">
                        </div>
                        <div class="card-header">
                            <h2 class="card-title">{{ buche.productName }}</h1>
                            <p class="card-title">{{ buche.produtTaste }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="container-fluid" id="ice-entremet">
        <h1 class="row justify-content-md-center">{{ title2 }}</h1>
        <div class="row category products">
            {% for entremet in entremets %}
                <div class="col-md-4 card border-light product-card galery">
                    <a href="{{ path('icedessert_product_iceentremet', {'id': entremet.id}) }}">
                        <div class="card-body">
                            <img src="images/{{ entremet.productMainPicture }}" width="100%" alt="Sorbet">
                        </div>
                        <div class="card-header">
                            <h2 class="card-title">{{ entremet.productName }}</h1>
                            <p class="card-title">{{ entremet.produtTaste }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}