        <h1 class="row justify-content-md-center align-items-center error-title">ACCÈS REFUSÉ</h1>
            <a href="{{ path('home')}}" class="col">
                <button class="btn btn-info error-button" id="cart-redirect-btn">Retour à la page d'accueil</button>
            </a>
        <img src="../../../images/404_error.jpg" class="error" alt="glace écrasée">
    </div>
{% endblock %}