{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/template.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/homepage.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/productspage.css') }}" type="text/css" rel="stylesheet">    
{% endblock %}

{% block title %}Ice cream baby !{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="row" id="ice_cream_navbar">
                <ul class="navbar-nav me-auto">
                    <li class="col-md-3 nav-item">
                        <p class="nav-link active">GLACES</p>
                        {# <a class="nav-link active" href="/glaces">GLACES</a> #}
                    </li>
                    <li class="col-md-3 nav-item">
                        <a class="nav-link" href="#sorbets">SORBETS</a>
                    </li>
                    <li class="col-md-3 nav-item">
                        <a class="nav-link" href="#icesticks">ICE STICKS</a>
                    </li>
                    <li class="col-md-3 nav-item">
                        <a class="nav-link" href="#cones">CÔNES</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid" id="glaces">
        <h1 class="row justify-content-md-center">{{ title1 }}</h1>
        <div class="row category products">
            {% for glace in glaces %}
                <div class="col-md-3 card border-light product-card">
                    <a href="{{ path('product_sheet', {'id': glace.id}) }}">
                        <div class="card-body">
                            <img src="images/{{ glace.productMainPicture }}" width="100%" alt="Glace">
                        </div>
                        <div class="card-header">
                            <h2 class="card-title">{{ glace.productName }}</h1>
                            <p class="card-title">{{ glace.produtTaste }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="container-fluid" id="sorbets">
        <h1 class="row justify-content-md-center">{{ title2 }}</h1>
        <div class="row category products">
            {% for sorbet in sorbets %}
                <div class="col-md-3 card border-light product-card">
                    <a href="{{ path('product_sheet', {'id': sorbet.id}) }}">
                        <div class="card-body">
                            <img src="images/{{ sorbet.productMainPicture }}" width="100%" alt="Sorbet">
                        </div>
                        <div class="card-header">
                            <h2 class="card-title">{{ sorbet.productName }}</h1>
                            <p class="card-title">{{ sorbet.produtTaste }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="container-fluid" id="ice-sticks">
        <h1 class="row justify-content-md-center">{{ title3 }}</h1>
        <div class="row category products">
            {% for icestick in icesticks %}
                <div class="col-md-3 card border-light product-card">
                     <a href="{{ path('product_sheet', {'id': icestick.id}) }}">
                        <div class="card-body">
                            <img src="images/{{ icestick.productMainPicture }}" width="100%" alt="Ice stick">
                        </div>
                        <div class="card-header">
                            <h2 class="card-title">{{ icestick.productName }}</h1>
                            <p class="card-title">{{ icestick.produtTaste }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="container-fluid" id="cones">
        <h1 class="row justify-content-md-center">{{ title4 }}</h1>
        <div class="row category products">
            {% for cone in cones %}
