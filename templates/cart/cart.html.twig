{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/template.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/homepage.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/cart.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/account.css') }}" type="text/css" rel="stylesheet">
    <link href="/your-path-to-fontawesome/css/fontawesome.css" rel="stylesheet">
{% endblock %}

{% block title %}Mon Ice panier{% endblock %}

{% block betweenNavbars %}
    <h1 class="row justify-content-md-center">MON ICE PANIER</h1>
{% endblock %}

{% block navbar2 %}
    {% if items | length > 0 %}
        {% if not app.user %}
            <div class="row second_navbar mt-4 ms-auto me-auto mb-3">
                <ul class="navbar-nav">
                    <li class="col-md-4 nav-item {{ panier_link }}">MON PANIER</li>
                    <li class="col-md-4 nav-item {{ connexion_link }}">CONNEXION</li>
                    <li class="col-md-4 nav-item {{ recap_link }}">RÉCAPITULATIF</li>
                </ul>
            </div>
        {% else %}
            <div class="row second_navbar mt-4 ms-auto me-auto mb-3">
                <ul class="navbar-nav">
                    <li class="col-md-6 nav-item">
                        <a class="nav-link {{ panier_link }}" href="">MON PANIER</a>
                    </li>
                    <li class="col-md-6 nav-item">
                        <a class="nav-link {{ recap_link }}" href="{{ path('cart_recap', {'id': app.user.id}) }}">RÉCAPITULATIF</a>
                    </li>
                </ul>
            </div>
        {% endif %}
    {% endif %}
{% endblock %}

{% block body %}
    {% if items | length > 0 %}
        <div class="container-fluid">
            <div class="row">
                {% if not app.user %}
                    <div class="col-md-6 mb-4 ms-auto me-auto progress">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar" style="width: 33%;" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                {% else %}
                    <div class="col-md-6 mb-4 ms-auto me-auto progress">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                {% endif %}
                <div class="col-md-8 ice-card ms-auto me-auto mb-5 infos-card">
                    <table class="row table mb-1">
                        <thead class="col-md-12">
                            <tr class="row table-title ps-3 pe-3">
                                <th class="col-md-2 table-box">ICE ICE</th>
                                <th class="col-md-3 table-box">DESCRIPTION</th>
                                <th class="col-md-2 table-box">PRIX UNITAIRE</th>
                                <th class="col-md-2 table-box">QUANTITÉ</th>
                                <th class="col-md-2 table-box">TOTAL</th>
                                <th class="col-md-1">X</th>
                            </tr>
                        </thead>
                        <tbody class="col-md-12 mt-1 ps-3 pe-3">
                            {% for item in items %}
                                <tr class="row">
                                    <td class="col-md-2">
                                        <img class="d-block me-auto ms-auto" src="../../images/{{ item.product.productMainPicture }}" alt="Photo principale">
                                    </td>
                                    <td class="col-md-3" id="item-name">{{ item.product.productName }}</td>
                                    <td class="col-md-2">{{ item.product.productPrice }}€</td>
                                    <td class="col-md-2">{{ item.quantity }}</td>
                                    <td class="col-md-2">{{ item.product.productPrice * item.quantity}}€</td>
                                    <td class="col-md-1">
                                        <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-sm btn-info iceice-button mt-0">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot class="col-md-12 mt-3 ps-3 pe-3">
                            <tr class="row">
                                <td class="col-md-9 text-end" id="total-title">Total :</td>
                                <td class="col-md-2"  id="total-price">{{ total }}€</td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="row pe-3">
                        <div class="col-md-11 text-end">
                            {% if not app.user %}
                                <a href="{{ path('security_login', {'status': 'panier'}) }}">
                                    <button class="btn btn-info iceice-button mb-3" id="ordering-button">Want my ICE ICE BABY !</button>
                                </a>
                            {% else %}
                                <a href="{{ path('cart_recap', {'id': app.user.id}) }}">
                                    <button class="btn btn-info iceice-button mb-3">Want my ICE ICE BABY !</button>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 ice-card ms-auto me-auto mt-5 mb-5 infos-card">
                    <p class="fw-bold m-0 p-4">Votre panier est vide, remplissez-le !</p>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

