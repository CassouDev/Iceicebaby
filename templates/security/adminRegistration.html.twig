{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('css/template.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/account.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block title %}
    Prenez le Ice contrôle !
{% endblock %}

{% block betweenNavbars %}
    <h1 class="row justify-content-md-center">Prenez le contrôle !</h1>
{% endblock %}

{% block body %}
<div class="container pb-3">
    <div class="row">
        <div class="col-md-9 ice-card ms-auto me-auto mt-5 mb-5 pt-4">
            {{ form_start(form) }}
            {{ form_row(form.username, {'label': 'Identifiant', 'attr': {'placeholder': 'Je suis...'}}) }}
            {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Un truc bien compliqué c\'est mieux'}}) }}
            {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Pour être sûr(e) que je ne me suis pas trompé'}}) }}
            <button type="submit" class="btn btn-info iceice-button">Je gère !</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}